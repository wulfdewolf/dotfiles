
exec dbus-update-activation-environment --systemd WAYLAND_DISPLAY XDG_CURRENT_DESKTOP=$compositor_name
exec systemctl --user stop xdg-desktop-portal xdg-desktop-portal-wlr
exec systemctl --user start xdg-desktop-portal xdg-desktop-portal-wlr

# Set mod key to Super (Windows key)
set $mod Mod4

input * {
    xkb_layout gb
    xkb_options nodeadkeys
}

# Font
font pango:JetBrainsMono Nerd Font 10

# Set background
output * bg #000000 solid_color

# Start terminal
bindsym $mod+Return exec alacritty

# Kill focused window
bindsym $mod+Shift+q kill

# Start dmenu/wofi
bindsym $mod+d exec wofi --show drun

# Change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# Exit Sway
bindsym $mod+Shift+e exit

# Reload the config
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart

# Floating toggle
bindsym $mod+Shift+space floating toggle

# Move focus between workspaces
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
# ... add more as needed

# Status bar (swaybar with default config)
bar {
    position top
    status_command i3status

    # You can also customize fonts, colors, and outputs:
    font pango:JetBrainsMono Nerd Font 10
    colors {
        background #000000
        statusline #ffffff
        focused_background #285577
    }
}

exec swayidle timeout 300 'swaylock -f -c 000000' \
               timeout 600 'swaymsg "output * dpms off"' \
               resume 'swaymsg "output * dpms on"'

# Screenshots
bindsym Print exec grimshot region copy

input "*" {
    tap enabled
}

# Move window to workspace N with $mod + Shift + N
bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5

# Move windows within workspace using $mod + Shift + h/j/k/l
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

bindsym $mod+f fullscreen toggle
